<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="ld32" package="com.example.app" version="1.0.0" company="" />

 	<app file="Main" main="Main" path="bin" />

	<window fps="60" background="0x333333" />
	<window width="800" height="450" resizable="true" unless="mobile" />
	<window fullscreen="true" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="4" />

	<source path="src" />

	<haxelib name="Punkiversal" />

	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="audio" include="*.mp3" if="flash" />
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg" unless="flash" />
	<assets path="assets/font" include="*.ttf" rename="font" />

	<icon path="assets/HaxePunk.svg" />
</project>
